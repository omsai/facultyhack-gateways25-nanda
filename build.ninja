base_sy = syllabus-pariksheet_nanda
img_aurora = 1920x1080-Aurora hero image.jpg

rule latex
  command = command emacsclient --eval '(progn (find-file "$tex") (TeX-command-sequence t t))'

build $
  $base_sy.aux $
  $base_sy.log $
  $base_sy.pdf $
  : latex $
  $base_sy.tex $
  $img_aurora
  tex = $base_sy.tex
